{{!-- Previous/next page links - only displayed on page 2+ --}}
<div class="extra-pagination inner">
  {{pagination}}
</div>

<div class="loop">
  <div class="loop__background"></div>

  <div class="loop__content js-loop" data-columns>
    {{#foreach posts}}
      <article class="loop__article">
        <div class="loop__article-content">
          <img class="loop__article-thumb" src={{image}} />
          <header class="loop__article-header">
            <ul class="loop__article-tags">
              {{#foreach tags}}
              <li class="loop__article-tag">
                  {{name}}
              </li>
              {{/foreach}}
            </ul>

            <h2 class="loop__article-title">
              <a href="{{url}}">
                {{title}}
              </a>
            </h2>

            <div class="loop__article-meta">
              <time class="loop__article-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMMM Do, YYYY"}}
              </time>
              <em>by</em>
              <span class="loop__article-author">
                {{author.name}}
              </span>
            </div>

          </header>

          <section class="loop__article-body">
            <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
          </section>
        </div>
      </article>
    {{/foreach}}
  </div>
</div>

